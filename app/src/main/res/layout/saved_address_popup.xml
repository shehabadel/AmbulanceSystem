<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_address_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_popup"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circle_image_background"
        android:padding="20dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/pick_up_location2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Pickup Location?"
        android:textColor="#2155cd"
        android:textSize="23sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/condition"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_rounded"
        android:elevation="8dp"
        android:hint="Condition"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/city_editText"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_rounded"
        android:elevation="8dp"
        android:hint="@string/city"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/street_editText"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_rounded"
        android:elevation="8dp"
        android:hint="@string/streetName"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/building_editText"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_rounded"
            android:elevation="8dp"
            android:hint="@string/building"
            android:inputType="number"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/floor_editText"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_rounded"
            android:elevation="8dp"
            android:hint="@string/floor"
            android:inputType="number"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/apartment_editText"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_rounded"
            android:elevation="8dp"
            android:hint="@string/apartment"
            android:inputType="number"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/confirmAddress"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:elevation="8dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Confirm Location"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
